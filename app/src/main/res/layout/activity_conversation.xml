<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@color/convoBG"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/msgBar"
        tools:context="com.Group2.chatfle.app.ConversationActivity" />
    <LinearLayout
        android:id="@+id/msgBar"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.cengalabs.flatui.views.FlatEditText
            android:hint="Send a message..."
            android:gravity="bottom"
            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageBox"
            flatui:theme="Grass"
            flatui:textAppearance="dark"
            flatui:fieldStyle="box"
            flatui:cornerRadius="3dip"
            android:layout_weight="1" />

        <ImageButton
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sendButton"
            android:clickable="false"
            android:src="@drawable/ic_action_send_now"
            android:background="#fff"
            android:tint="@color/Black"
            android:onClick="sendMessage"
            android:visibility="gone"
            android:contentDescription="Send" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            android:id="@+id/progBar" />
    </LinearLayout>
</RelativeLayout>

